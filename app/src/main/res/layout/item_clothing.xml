<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="13dp">

    <CheckBox
        android:id="@+id/cbDeleteClothing"
        android:elevation="5dp"
        android:buttonTint="@color/brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></CheckBox>

    <ProgressBar
        android:id="@+id/pbLoadingClothingImage"
        android:visibility="invisible"
        android:indeterminateTint="@color/brown"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/ivClothing"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvClothingName"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivClothing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Cool Shirt"
        android:textColor="@color/brown" />

</RelativeLayout>