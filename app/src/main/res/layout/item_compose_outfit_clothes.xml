<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvComposeOutfitClothingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivComposeOutfitClothingImage"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:text="Clothing1"
        android:textColor="@color/brown"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/cbComposeOutfitClothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/ivComposeOutfitClothingImage"
        android:buttonTint="@color/brown"
        android:checked="false" />

    <ImageView
        android:id="@+id/ivComposeOutfitClothingImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>